<!DOCTYPE html>
<html>
<head>
  <title>RTU Departments</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5 text-center">
    <h1 class="mb-4">ðŸš€ Rajasthannn Technical University</h1>
    <p class="lead">Explore RTU Departments</p>
    <div class="row mt-4">
      <% departments.forEach(dept => { %>
        <div class="col-md-3">
          <div class="card shadow-sm mb-4">
            <div class="card-body">
              <h5><%= dept.name %></h5>
              <a href="/departments/<%= dept.id %>" class="btn btn-outline-primary btn-sm">View</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
